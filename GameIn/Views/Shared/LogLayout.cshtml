<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/" + ViewBag.theme + "/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <table style="width:100%;">
        <tr>
            <td align="right">
                <div style="margin-right:5%;">
                    @Html.ActionLink(Resources.Resources.English, HttpContext.Current.Request.RequestContext.RouteData.Values["Action"].ToString(), HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString(), new { lang = "en" }, "")
                    / @Html.ActionLink(Resources.Resources.Spanish, HttpContext.Current.Request.RequestContext.RouteData.Values["Action"].ToString(), HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString(), new { lang = "es" }, "")
                </div>
            </td>
        </tr>
        <tr>
            <td>
                @RenderBody()
            </td>
        </tr>
    </table>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
